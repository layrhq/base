<section class="col-md-6">
  <div class="form-horizontal">
    <div class="form-group">
      <label class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        {{input type="text" value=model.name class="form-control" placeholder="Client Name"}}
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default" {{action 'saveClient' model}}>Create Client</button>
      </div>
    </div>
  </div>
</section>
