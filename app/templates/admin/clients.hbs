<div id="content" class="clearfix">
  {{#basic-header}}Clients{{/basic-header}}
  <div class="window">
    {{#admin-header}}
      <a href="#" class="btn">
        <i class="fa fa-lock"></i> Admin
      </a>
    {{/admin-header}}

    <div class="inner-padding">
      <div class="row">
        <section class="col-md-4">
          <div class="widget">
            <header>
              <div class="pull-left">
                <h2><i class="fa fa-universal-access"></i> Client Overview</h2>
              </div>
              <div class="pull-right">
                {{#link-to 'admin.clients.new' class="btn btn-default"}}
                  <i class="fa fa-plus"></i> Add Client
                {{/link-to}}
              </div>
            </header>
            <div>
              <table class="table">
                <tbody>
                  {{#each model as |client|}}
                    {{#link-to 'admin.clients.view.projects' client tagName="tr" class="clickable" activeClass="row-highlight"}}
                      <td>{{client.name}}</td>
                      <td>{{client.projects.length}}</td>
                    {{/link-to}}
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </section>
        {{outlet}}
      </div>
    </div>
  </div>
</div>
